@model ProductManagementApp.Models.ViewModels.ProductLocaleViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description" class="form-control" />
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price.Amount"></label>
        <input asp-for="Product.Price.Amount" class="form-control" />
        <span asp-validation-for="Product.Price.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Locale.Language"></label>
        <input asp-for="Locale.Language" class="form-control" />
        <span asp-validation-for="Locale.Language" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Locale.Country"></label>
        <input asp-for="Locale.Country" class="form-control" />
        <span asp-validation-for="Locale.Country" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@model ProductManagementApp.Models.ViewModels.ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Id
        </dd>

        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Name ?? "N/A"
        </dd>

        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Price?.Amount.ToString("C") ?? "N/A"
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description ?? "No description available"
        </dd>

        <dt class="col-sm-2">
            Reviews
        </dt>
        <dd class="col-sm-10">
            @Model.Reviews ?? "No reviews available"
        </dd>
    </dl>
</div>

<div>
    <a asp-action="ExternalProducts">Back to List</a>
</div>
